<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Jatrik">
		<jta-data-source>java:jboss/datasources/jat</jta-data-source>
		<class>dominio.Usuario</class>
		<class>dominio.Campeonato</class>
		<class>dominio.Equipo</class>
		<class>dominio.Estadio</class>
		<class>dominio.Jugador</class>
		<class>dominio.Pais</class>
		<class>dominio.Partido</class>
		<class>dominio.Mensaje</class>
		<class>dominio.Oferta</class>
		<class>dominio.Cambio</class>
		<class>dominio.Notificacion</class>
		<class>dominio.Comentario</class>
		<properties>
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
			<property name="hibernate.default_schema" value="public"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
		</properties>
	</persistence-unit>
</persistence>
